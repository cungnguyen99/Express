extends ../layout/common 
block content
  h1.file-center.m-4 List users
  .container
    .row
      h3 Create new user
      form(action="/api/products", method="POST")
            .form-group
                lable(for="name") Fimls name
                input#name.form-control(name="name", type="text",class="my-3")
                lable(for="genre") Genre
                input#name.form-control(name="genre", type="text",class="my-3")
                lable(for="country") Country
                input#name.form-control(name="country", type="text",class="my-3")
                lable(for="time") Time
                input#name.form-control(name="time", type="text",class="my-3")
                lable(for="cast") Cats
                input#name.form-control(name="cast", type="text",class="my-3")
                lable(for="imdb") Imdb
                input#name.form-control(name="imdb", type="text",class="my-3")
                lable(for="year") Manufacture Year
                input#name.form-control(name="year", type="text",class="my-3")
                lable(for="url") Main image
                input#url.form-control(name="url", type="file",class="my-3")
                lable(for="url_1") First image
                input#url_1.form-control(name="url_1", type="file",class="my-3")
                lable(for="url_2") Second image
                input#url_2.form-control(name="url_2", type="file",class="my-3")
                lable(for="url_3") Third image
                input#url_3.form-control(name="url_3", type="file",class="my-3")
                lable(for="url_4") Fourth image
                input#url_4.form-control(name="url_4", type="file",class="my-3")
                lable(for="description") Description
                input#avatar.form-control(name="description", type="text",class="my-3")
                button.btn.btn-primary Craete
    .row
      each val, index in films
        .col.my-3
          .card(style='width: 18rem;  height=50rem; box-sizing: border-box;')
            img.card-img-top(src=val.image, alt='Card image cap')
            .card-body
              h5.card-title=val.name
              p.card-file=val.description
              a.btn.btn-primary(href='/cart/add/'+val.id) AÄ‘d Cart
    nav(aria-label='Page navigation example')
        ul.pagination
          li.page-item
            a.page-link(href='/product?page='+(page-1), id="pre" aria-label='Previous')
                span(aria-hidden='true') &laquo;
                span.sr-only Previous
          each val in products
            li.page-item
            a.page-link(href='/product?page='+val)=val
          li.page-item
            a.page-link(href='/product?page='+(page+1), aria-label='Next')
                span(aria-hidden='true') &raquo;
                span.sr-only Next
