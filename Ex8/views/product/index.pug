extends ../layout/common 
block content
  h1.text-center.m-4 List users
  .container
    .row
      each val, index in userList
        .col.my-3
          .card(style='width: 18rem;  height=50rem; box-sizing: border-box;')
            img.card-img-top(src=val.image, alt='Card image cap')
            .card-body
              h5.card-title=val.name
              p.card-text=val.description
              a.btn.btn-primary(href='/product/'+val.id) View